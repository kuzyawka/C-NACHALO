#include <iostream>
#include <cmath>

using namespace std;

double func(double x)
{
	double rez = pow(x, 2) - 2 * x + 1 - 0.5 * exp(x);
	return rez;
}

double func2(double x)
{
	double rez = 2*x-2-0.5*exp(x);
	return rez;
}

int main()
{
	setlocale(LC_ALL, "Russian");
	float e;
	cout << "Введите точность e: ";
	cin >> e;

	cout << "==========МЕТОД НЬЮТОНА=========== \n";
	double x0, x;
	int count = 1;
	double f, f0;
	cout << "Введите начальное значение х0: ";
	cin >> x0;
	f0 = func(x0);
	x = x0 - func(x0) / func2(x0);

	while (abs(x-x0) > e)
	{
		x0 = x;
		x = x0 - func(x0) / func2(x0);
		count++;
	}
	cout << "Значение корня= " << x << "\nточность= " << e << " \nкол-во итераций= " << count << '\n';

	
	
	
	cout << "==========МЕТОД ХОРД=========== \n";
	double a, b, x2;
	int count2 = 1;
	double fb, fa, fx;
	cout << "Введите концы отрезка a и b: ";
	cin >> a >> b;
	fa = func(a);
	fb = func(b);
	x2 = a-(b-a)*fa/(fb-fa);
    
	fx = func(x2);
	        while (abs(x2 - b) > e)
			{
				fx = func(x2);
				if (fx * fa > 0)
				{
					b = x2;
					
				}
				else
				{
					a = x2;
					
				}
				fb=
				x2 = a - (b - a) * fa / (fb - fa);
			count2++;
			}
		cout << "Значение корня= " << x2 << "\nточность= " << e << " \nкол-во итераций= " << count2 << '\n';
	return 0;
}
