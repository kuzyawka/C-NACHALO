4.
#include <iostream>
#include<cmath>
using namespace std;
int main() {
	int a, b;
	cin >> a;
	cin >> b;
	cout << "summa= " << pow(a, 2) + pow(b, 2) << endl; 
	cout << "proizvedenie= " << pow(a, 2) + pow(b, 2) << endl;
	if (a > b) {
	cout << "chasnoe= " << pow(a, 2) / pow(b, 2) << endl;
	cout << "raznost= " << pow(a, 2) - pow(b, 2) << endl; }
	else {
		cout << "chasnoe= " << pow(b, 2) / pow(a, 2) << endl;
		cout << "raznost= " << pow(b, 2) - pow(a, 2) << endl;
	}
	return 0;
}


5.
#include <iostream>
#include<cmath>
using namespace std;
int main() {
	int a, b;
	cin >> a;
	cin >> b;
	cout << "summa= " << abs(a) + abs(b) << endl; 
	cout << "proizvedenie= " << abs(a) * abs(b) << endl;
	if (abs(a) > abs(b)) {
	cout << "chasnoe= " <<(float) abs(a) / abs(b) << endl;
	cout << "raznost= " << abs(a) - abs(b) << endl; }
	else {
		cout << "chasnoe= " << (float)abs(b) / abs(a) << endl;
		cout << "raznost= " << abs(b) - abs(a) << endl;
	}
	return 0;
}
